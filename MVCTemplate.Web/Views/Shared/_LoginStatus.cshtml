@{
}

@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-action="Logout" asp-controller="Account">
        Welcome @User.Identity.Name (@User.Claims.FirstOrDefault(x=>x.Type == "Position"))
        <button type="submit" class="m-lg-2 btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-action="Login" asp-controller="Account">Login</a>
}
